<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FONDO1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carlos.practicante_goma_pf.IngresarPedidoActivity" >

    <Button
        android:id="@+id/btn_ingpedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listaarticulos"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listaarticulos"
        android:text="@string/agrega_pedido" />

    <EditText
        android:id="@+id/et_unidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="20"
        android:hint="Cantidad"
        android:inputType="number"
        android:textColorHint="@color/negro"
        android:textSize="24sp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_dinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ingpedido"
        android:ems="20"
        android:hint="$ Dinero Cliente"
        android:inputType="number"
        android:textColorHint="@color/negro"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listaarticulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_dinero"
        android:layout_alignLeft="@+id/et_dinero"
        android:layout_below="@+id/et_unidad" >

    </ListView>

</RelativeLayout>
