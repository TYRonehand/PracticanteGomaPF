<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FONDO1"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carlos.practicante_goma_pf.Ingreso" >

    <EditText
        android:id="@+id/userpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:shadowColor="@color/negro"
        android:textColorHint="@color/negro" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userpass"
        android:layout_alignRight="@+id/useralia"
        android:layout_below="@+id/userpass"
        android:layout_marginTop="120dp"
        android:text="@string/ingresar"
        android:textColorHint="@color/negro" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/useralia"
        android:layout_alignLeft="@+id/useralia"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/userpass"
        android:contentDescription="TODO"
        android:src="@drawable/logopractica" />

    <EditText
        android:id="@+id/useralia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userpass"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/alias_washooo_"
        android:inputType="text"
        android:textColorHint="@color/negro" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Version 0.0.1 alpha"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
</RelativeLayout>