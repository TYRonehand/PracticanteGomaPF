<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FONDO1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carlos.practicante_goma_pf.ActivityPersonas" >

    <TextView
        android:id="@+id/TituloPedidoHoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ingreso_personal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/negro"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_agregarcliente"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn_agregarcliente"
        android:layout_below="@+id/nombrecliente"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logopractica" />

    <Button
        android:id="@+id/btn_agregarcliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombrecliente"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:text="@string/agregar_cliente" />

    <AutoCompleteTextView
        android:id="@+id/nombrecliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TituloPedidoHoy"
        android:layout_below="@+id/TituloPedidoHoy"
        android:ems="10"
        android:hint="Nombre Cliente"
        android:inputType="textAutoComplete" />

</RelativeLayout>
